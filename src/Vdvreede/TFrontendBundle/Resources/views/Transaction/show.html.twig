<h1>Transaction</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Categoryid</th>                <td>{{ entity.categoryId }}</td>        </tr>
        <tr>
            <th>Userid</th>                <td>{{ entity.userId }}</td>        </tr>
        <tr>
            <th>Accountid</th>                <td>{{ entity.accountId }}</td>        </tr>
        <tr>
            <th>Description</th>                <td>{{ entity.description }}</td>        </tr>
        <tr>
            <th>Memo</th>                <td>{{ entity.memo }}</td>        </tr>
        <tr>
            <th>Date</th>                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Amount</th>                <td>{{ entity.amount }}</td>        </tr>
        <tr>
            <th>Split</th>                <td>{{ entity.split }}</td>        </tr>
        <tr>
            <th>Reportable</th>                <td>{{ entity.reportable }}</td>        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('transaction') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('transaction_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('transaction_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
